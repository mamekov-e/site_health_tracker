<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2" author="Elnur">
        <createTable tableName="users" schemaName="auth">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(120)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)"/>
            <column name="last_name" type="varchar(50)"/>
            <column name="middle_name" type="varchar(50)"/>
            <column name="phone" type="varchar(255)"/>
            <column name="email_confirmed" type="boolean" defaultValue="false"/>
            <column name="created_date" type="timestamp(6)" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="last_modified_date" type="timestamp(6)" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

