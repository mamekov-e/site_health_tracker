<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="13" author="Elnur">
        <createTable tableName="emails" schemaName="sht">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="address" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="verification_code" type="varchar(256)"/>
            <column name="code_expiration_time" type="timestamp"/>
            <column name="enabled" type="bool" defaultValue="false"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
