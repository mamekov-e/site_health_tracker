<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="11" author="Elnur">
        <createTable tableName="site_groups" schemaName="sht">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_site_groups_users"
                             referencedTableName="users" referencedTableSchemaName="auth"
                             referencedColumnNames="id" unique="true"/>
            </column>
            <column name="status" type="sht.site_group_status">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="site_group_2" author="Elnur">
        <dropUniqueConstraint
                schemaName="sht"
                tableName="site_groups"
                uniqueColumns="user_id"
                constraintName="site_groups_user_id_key"/>
    </changeSet>
</databaseChangeLog>
